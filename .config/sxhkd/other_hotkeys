# Restart Polybar

super + shift + p
	~/.config/polybar/launch.sh

# Screenshots

Print
	scrot -u -z '%Y-%m-%d_%H:%M:%S.png' -e 'mv $f ~/Pictures/Screenshots' && notify-send "Window Screenshot" "Image Saved to Screenshots"

super + Print
	scrot -m -z '%Y-%m-%d_%H:%M:%S.png' -e 'mv $f ~/Pictures/Screenshots' && notify-send "Screen Screenshow" "Image Saved to Screenshots"

# Volume Control

XF86AudioRaiseVolume
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +2%

XF86AudioLowerVolume
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -2%

XF86AudioMute
	pactl set-sink-mute 0 toggle

# Power Menu

super + F1
	~/.scripts/system-menu

